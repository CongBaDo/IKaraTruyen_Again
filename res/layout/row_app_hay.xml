<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/space_between_double_view"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_thumb_app_hay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/space_between_double_view"
            android:background="@drawable/bg_noimage"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_between_double_view"
            android:layout_marginRight="60dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title_app"
                android:textStyle="bold"
                style="@style/TextAppearance.Sherlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="ALO"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_content_app"
                style="@style/TextAppearance.Sherlock.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="ALO"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_open_app_hay"
        style="@style/TextAppearance.Sherlock"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/open_app_hay"
        android:textColor="@color/color_text_bottom" />

</RelativeLayout>